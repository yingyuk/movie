.container
	.row
		.page-header.clearfix
			h1 #{title}
			.col-md-4
				small 副标题
			.col-md-8
				form(method="GET",action="/results")
					.input-group.col-md-4.pull-right
						input.form-control(type="text",name="q")
						sapn.input-group-btn
							button.btn.btn-default(type="submit") 搜索
			.row
				.col-md-2
					span 普通权限
				.col-md-2
					a(href="/") 首页
				.col-md-2
					a(href="/signin") 用户登录
				.col-md-2
					a(href="/signup") 用户注册
			hr
			.row
				.col-md-2
					span 管理员权限 账号:user 密码:pswd
				.col-md-2
					a(href="/admin/movie/new") 新增电影
				.col-md-2
					a(href="/admin/category/list") 批量添加电影
				.col-md-2
					a(href="/admin/category/new") 新增分类
			.row
				.col-md-2
					a(href="/admin/movie/list") 电影列表
				.col-md-2
					a(href="/admin/user/list") 用户列表
				.col-md-2
					a(href="/admin/category/list") 分类列表
			.row 
				p 还有电影详情页;电影分类详情页;搜索功能;评论功能;点击头像进行回复;
				hr
				p 还有很多功能需要完善;用户个人信息页面;自己的评论查看;点赞;收藏等等;
				p 还需要加入前端框架;省的总是要刷新页面;
				p 还要爬取视频地址;争取每个电影都能找到对应的预告片;
.navbar.navbar-default.navbar-fixed-bottom
	.container
		.navbar-header
			a.navbar-brand(href="/") ABC
		if user
			p.navbar-text.navbar-right
				span 欢迎您,#{user.name}	
				span &nbsp;|&nbsp;
				a.navbar-link(href="/loginout") 登出
		else
			p.navbar-text.navbar-right
				a.navbar-link(href="#",data-toggle="modal",data-target="#signupModal") 注册
				span &nbsp;|&nbsp;
				a.navbar-link(href="#",data-toggle="modal",data-target="#signinModal") 登录
#signupModal.modal.fade
	.modal-dialog
		.modal-content
			form(method="POST",action="/user/signup")
				.modal-header 注册
				.modal-body
					.form-group
						label(for="signupName") 用户名
						input#signupName.form-control(name="user[name]",type="text")
					.form-group
						label(for="signupPassword") 密码
						input#signupPassword.form-control(name="user[password]",type="password")
					.modal-footer
						button.btn.btn-default(type="button",data-dismiss="modal") 关闭
						button.btn.btn-success(type="submit") 提交
#signinModal.modal.fade
	.modal-dialog
		.modal-content
			form(method="POST",action="/user/signin")
				.modal-header 登录
				.modal-body
					.form-group
						label(for="signinName") 用户名
						input#signinName.form-control(name="user[name]",type="text")
					.form-group
						label(for="signinPassword") 密码
						input#signinPassword.form-control(name="user[password]",type="password")
					.modal-footer
						button.btn.btn-default(type="button",data-dismiss="modal") 关闭
						button.btn.btn-success(type="submit") 提交


